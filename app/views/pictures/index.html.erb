<h1>Momentgram!</h1>

<div class="posts" id="posts">
  <% @pictures.each do |picture| %>
    <div class="post" id="post">
      <%= link_to image_tag(picture.image.url, class: 'post-img', alt: 'Photo'), picture_path(:id,picture.id) if picture.image? %>
      <div class="caption">
        <h2><strong><%= picture.caption %></strong> by <%= picture.user.email %></h2>
      </div>
      <div class="actions">
        <%= link_to like_picture_path(picture), method: :put do %>
          ♥️ <%= picture.get_upvotes.size %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
