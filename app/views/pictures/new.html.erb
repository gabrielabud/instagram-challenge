<div class="pictures new">
  <h2>Add photo</h2>

  <%= form_for(@picture) do |f| %>
    <tr>
      <th><%= f.label(:caption) %></th>
      <td><%= f.text_field(:caption) %></td>
    </tr>
    <tr>
      <th><%= f.label(:photo) %></th>
      <td><%= f.file_field(:photo) %></td>
    </tr>
    <div class="form-buttons">
      <%= f.submit("Create Post") %>
    </div>
  <% end %>
</div>
